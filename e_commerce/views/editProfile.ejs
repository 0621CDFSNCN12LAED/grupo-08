<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./partials/head') %>
        <script src="https://kit.fontawesome.com/d3503ff7e5.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/styles-lr.css" />
        <link rel="stylesheet" href="/css/theme-lr.css" />
        <link rel="stylesheet" href="/css/utils-lr.css" />
        <link rel="stylesheet" href="/css/normalize.css" />
        <link rel="stylesheet" href="../css/styles-register.css">
        <link rel='stylesheet' href='/css/styles-sm-register.css' media='(min-width:480px)' />
        <link rel='stylesheet' href='/css/styles-md-register.css' media='(min-width:768px)' />
        <link rel='stylesheet' href='/css/styles-lg-register.css' media='(min-width:992px)' />
        <link rel="stylesheet" href="../css/styleHome.css">
        <link rel="stylesheet" href="../css/styleHome-sm.css">
        <link rel="stylesheet" href="../css/styleHome-md.css">
        <link rel="stylesheet" href="../css/styleHome-lg.css">

</head>


<%- include('./partials/header') %>

    <main class='backgroundImg'>
        <div class='blueTransBg flexWrap justifyCenter containerForm'>
            <!-- begins form -->
            <div class='headerRegisterForm'>
                <!-- form header -->
                <h1 class='textRegisterRegister fontSize5vw whiteText'> Modifica tus datos</h1>
                <form class=' form centerText padTop10 flexWrap flexColumn centerText' action="/profile/edit"
                    method="post">
                    <!-- begins form inputs -->
                    <fieldset>
                        <input type='hidden' name='id' value='<%= user.id  %>' />
                        <div class='paddingBot8'>
                            <label for='firstName'> Indícanos tu nombre</label>
                            <br>
                            <input style='color:black' type='text' id='name' name='firstName'
                                value="<%= user.firstName  %>">
                            <% if (locals.errors && errors.name) { %>
                                <div class="errorMessage">
                                    <p>
                                        <%= errors.name.msg %>
                                    </p>
                                </div>
                                <% } %>
                        </div>
                        <div class=' paddingBot8'>
                            <label for='lastName'>Indícanos tu Apellido </label>
                            <br>
                            <input style='color:black' type='text' id='apellido' name='lastName'
                                value="<%= user.lastName %>">
                            <% if (locals.errors && errors.apellido) { %>
                                <div class="errorMessage">
                                    <p>
                                        <%= errors.apellido.msg %>
                                    </p>
                                </div>
                                <% } %>
                        </div>
                        <div class='paddingBot8 marginBot10'>
                            <label for='email'>E-mail</label>
                            <br>
                            <input style='color:black' class='whiteBg' type='email' id='email' name='email'
                                value="<%= user.email  %>">
                            <% if (locals.errors && errors.email) { %>
                                <div class="errorMessage">
                                    <p>
                                        <%= errors.email.msg %>
                                    </p>
                                </div>
                                <% } %>
                        </div>
                        <div class=' paddingBot8'>
                            <label for='userPassword'> Elige una contraseña</label>
                            <br>
                            <input style='color:black' type='password' id='password' name='userPassword'
                                value="<%= user.userPassword  %>">
                            <% if (locals.errors && errors.password) { %>
                                <div class="errorMessage">
                                    <p>
                                        <%= errors.password.msg %>
                                    </p>
                                </div>
                                <% } %>
                        </div>

                        <div class='paddingBot12'>
                            <button class='buttonRegister' type='submit'>Confirmar cambios</button>
                        </div>
                    </fieldset>

                </form>
            </div>
    </main>


    <%- include('./partials/footer') %>
        </body>

</html>